<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainFragment">

    <EditText
        android:id="@+id/et1_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/email"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_email"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:textSize="14sp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/et2_theme"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/theme"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/custom_theme"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et1_email"
        />

    <EditText
        android:id="@+id/et3_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/message"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/custom_message"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et2_theme"
        />

    <Button
        android:id="@+id/btnOpenGmail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/send_data"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et3_message"
        />


</androidx.constraintlayout.widget.ConstraintLayout>